datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id           String         @id @default(uuid())
  name         String
  description  String?
  price        Float
  stock        Int
  // categoryId   String
  // category     Category       @relation(fields: [categoryId], references: [id])
  images       Image[]
  OrderProduct OrderProduct[]
}

// model Category {
